<!DOCTYPE html>
<html>

<head>
    <title>vue index</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/darkly/bootstrap.min.css">
</head>

<body>

    <div id="body" class="container">

        <h2 id="title-app">{{message}}</h2>
        <ul class="list-group" id="link-app">
            <li class="list-group-item" v-for="(item, index) in data">
                <a v-if="item.newopen" v-bind:href="item.url" target="_blank">{{item.message}}</a>
                <a v-else v-bind:href="item.url" target="_self">{{item.message}}</a>
            </li>
        </ul>

    </div>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="https://unpkg.com/vue/dist/vue.js"></script>

    <script>
        //清單
        var list_data = {
            data: [
                { newopen: true, message: 'JIRA', url: 'http://jira/browse/WMTWNOR-4245' },
                { newopen: true, message: 'How-to-test-it.docx', url: 'How-to-test-it.docx' },
                { newopen: true, message: 'Deploy-info.docx', url: 'Deploy-info.docx' }
            ]
        };
        var app = new Vue({
            el: '#link-app',
            data: list_data
        });

        //標題
        var title_data = {
            message: 'Hello dev'
        };
        var app2 = new Vue({
            el: '#title-app',
            data: title_data
        });
    </script>
</body>

</html>